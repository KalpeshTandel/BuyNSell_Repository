
@model BuyNSell.Models.OrderList_ViewModel

@section Scripts{
<script src="~/AngularJs/CustomerOrderController.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>

<script src="~/Scripts/MyScript.js"></script>
    }


<div id="divViewCustomerOrderDetails">
    <img id="btnCloseViewCustomerOrderDetails" onclick="btnCloseViewCustomerOrderDetails_Click()" src="~/Images/Close.jpg" style="width:30px;cursor: pointer;margin: 0% 0% 0% 93%;" />

    <h3 style="margin:0% 0% 0% 30%;font-weight:bold">Order Details</h3>

    <div id="divProductPicture" style="margin: 4% 0% 4% 4%;">
        <img id="imgProductPicture" src="data:image/jpeg;base64,@System.Convert.ToBase64String(Model.PictureContent)" alt="No Image" style="height: 280px;width: 430px;" />
    </div>


   <div id="divOrderId" class="divViewCustomerOrderDetails">
       <div class="LabelViewCustomerOrderDetailsBold">
           @Html.Label("OrderId")
       </div>
       <div class="LabelViewCustomerOrderDetails" style="margin-left: 109px;">
           @Html.DisplayFor(m => m.OrderId)
           @*@Html.Label(Model.OrderId.ToString())*@
       </div>
   </div>

    <div id="divProductName" class="divViewCustomerOrderDetails">
        <div class="LabelViewCustomerOrderDetailsBold">
            @Html.Label("Product Name")
        </div>
        <div class="LabelViewCustomerOrderDetails" style="margin-left: 53px;">
            @Html.DisplayFor(m => m.ProductName)
        </div>
    </div>

    <div id="divCustomerName" class="divViewCustomerOrderDetails">
        <div class="LabelViewCustomerOrderDetailsBold">
            @Html.Label("Customer Name")
        </div>
        <div class="LabelViewCustomerOrderDetails" style="margin-left: 37px;">
            @Html.DisplayFor(m => m.CustomerName)
        </div>
    </div>

    <div id="divOrderQuantity" class="divViewCustomerOrderDetails">
        <div class="LabelViewCustomerOrderDetailsBold">
            @Html.Label("Order Quantity")
        </div>
        <div class="LabelViewCustomerOrderDetails"style="margin-left: 46px;">
            @Html.DisplayFor(m => m.OrderQuantity)
        </div>      
    </div>

    <div id="divAvailableQuantity"  class="divViewCustomerOrderDetails">
        <div class="LabelViewCustomerOrderDetailsBold">
            @Html.Label("Available Quantity")
        </div>
        <div class="LabelViewCustomerOrderDetails" style="margin-left: 17px;">
            @Html.DisplayFor(m => m.AvailableQuantity)
        </div>
    </div>
    
    <div id="divPaymentAmount"  class="divViewCustomerOrderDetails">
        <div class="LabelViewCustomerOrderDetailsBold">
            @Html.Label("Payment Amount")
        </div>
        <div class="LabelViewCustomerOrderDetails" style="margin-left: 25px;">
            @Html.DisplayFor(m => m.PaymentAmount)
        </div>
    </div>

    <div id="divProductPrice" class="divViewCustomerOrderDetails">
        <div class="LabelViewCustomerOrderDetailsBold">
            @Html.Label("Price Per Unit")
