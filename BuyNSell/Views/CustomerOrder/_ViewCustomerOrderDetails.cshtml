            @Html.Label("Delivery Address")
        </div>
        <div class="LabelViewCustomerOrderDetails" style="margin-left: 29px;">
            @Html.DisplayFor(m => m.DeliveryAddress)
        </div>
    </div>

    <div id="divContactNum"  class="divViewCustomerOrderDetails">
        <div class="LabelViewCustomerOrderDetailsBold">
            @Html.Label("Contact Number")
        </div>
        <div class="LabelViewCustomerOrderDetails" style="margin-left: 34px;">
            @Html.DisplayFor(m => m.ContactNum)
        </div>
    </div>

    <div id="divOrderAddedDate" class="divViewCustomerOrderDetails">
        <div class="LabelViewCustomerOrderDetailsBold">
            @Html.Label("Order Date")
        </div>
        <div class="LabelViewCustomerOrderDetails" style="margin-left: 81px;">
            @Html.DisplayFor(m => m.OrderAddedDate)
        </div>
    </div>

                        
</div>
