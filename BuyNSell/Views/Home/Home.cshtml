                            @Html.DisplayFor(m => item.ProductName)
                        </div>


                    </div>
                }*@
        </div>
        @*;width: 30%;height: 50%*@
        <div id="divAddOrder" style="display:none; position:fixed;min-height:500px;min-width:500px; padding:1% 1% 2% 1%;background-color:white; z-index:2;left:35%;top:22%; border-radius:35px;box-shadow:30px 20px 17px;">
        </div>

        <div id="divAddOwnRating" style="display:none;position:fixed;height: 150px;width: 350px;padding:1% 1% 1% 1%;background-color:white;z-index:2;left:37%;top:35%; border-radius:20px;box-shadow:30px 20px 17px;">
        </div>

