            </div>

            <div style="height:50%; display:flex">

               <div id="divCategory" class="divMenu" >
                   @Html.ActionLink("Category","Index","Home",new { @class= "MenuItem" })                  
               </div>
                
                <div id="divMyProducts" class="divMenu">
                    @Html.ActionLink("My products", "MyProducts", "Product",null, new { @class = "MenuItem" })
                </div>

                <div class="divMenu">
                    @Html.ActionLink("My Orders", "Index", "Home",null, new { @class = "MenuItem" })
                </div>

                <div class="divMenu">
                    @Html.ActionLink("My Cart", "Index", "Home",null, new { @class = "MenuItem" })
                </div>

                <div id="divMyProfile" class="divMenu" >
                    @Html.ActionLink("My Profile", "Index", "Home",null, new { @class = "MenuItem" })
                </div>
            </div>

