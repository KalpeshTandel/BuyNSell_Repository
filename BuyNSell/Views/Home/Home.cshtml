<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/MyStyle.css" rel="stylesheet" />
    <script src="~/Scripts/MyScript.js" type="text/javascript"></script>

</head>
<body>
    <div style="background-color:lightgrey;padding:1% 0% 0% 0%">
        <div id="divSearch" style="background-color:white;border-radius:10px;padding:1% 1% 1% 4%; margin:1% 1% 1% 1%; display:flex;box-shadow: 5px 10px 10px #888888;">
           
                @*<div>*@
                @*<label style="font-weight:bold; font-size:20px;margin-right: 25px;">Product Name</label>*@
                <input type="text" id="txtProductName" class="form-control" placeholder="Search Product Name Here.." style="font-size:17px;width:25%;font-weight: bold;" />

                @*<label style="font-weight:bold; font-size:20px;margin-right: 25px;margin-left: 4%;">Product Category</label>*@
                @Html.DropDownList("ddlProductCategory", new SelectList(ViewBag.ProductCategory, "Value", "Text"), " Select Product Category ", new { style = "font-size:17px;font-weight: bold;margin-left:1%;width:20%", @class = "form-control" })
                @*</div>*@
                
                    <label id="lblFromDate" style="margin-left: 2%;">From Date</label>
                    <input type="date" id="txtFromDate" style="margin-left: 1%;" />

                    <label id="lblToDate" style="margin-left: 2%;">To Date</label>
                    <input type="date" id="txtToDate" style="margin-left: 1%;" />
                     
           
            
                <button id="btnSearch" class="btn btnSubmit" style="margin-left:5%">
                    <span class="glyphicon glyphicon-search"></span> Search
                </button>
           
                 
            

        </div>


        <div style="display:flex;margin-left: 55%;margin-top: 2%;">
            <div id="divSortBy" style="display: flex; width:50%">
                <label id="lblSortBy" style="font-weight:bold; font-size:20px">Sort By</label>
                <select id="ddlSortBy" class="form-control" style="width:60%; font-size:17px;font-weight: bold;">
                    <option value="AverageRate desc,CountUserRate desc">Most Rated First</option>
                    <option value="ProductName">Product Name</option>
                    <option value="AddedDate Desc">Newest First</option>
                    <option value="Price">Price</option>
                </select>
            </div>


            <div id="divPageSize" style="display: flex;width:50%">
                <label id="lblPageSize" style="font-weight:bold; font-size:20px">Products Per Page</label>
                <select id="ddlPageSize" class="form-control" style="width:25%; font-size:17px;font-weight: bold;">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                </select>
            </div>

        </div>



        <div id="divSearchResult">

            @Html.Partial("_ProductList")

            @*@foreach (var item in Model)
                {
