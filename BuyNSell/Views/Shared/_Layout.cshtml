               <li>
                   @Html.ActionLink("My Profile", "Index", "Home")
               </li>
           </ul>
        </div>*@
        

    </div>
</div>
    <div id="divCategoryItems" style="margin-left: 20%;" class="divSubMenu">
        @Html.ActionLink("Mobiles", "Index", "Home",null, new { @class = "MenuItem" })
        @Html.ActionLink("Electronics", "Index", "Home",null, new { @class = "MenuItem" })
        @Html.ActionLink("Computers", "Index", "Home",null, new { @class = "MenuItem" })
    </div>

    <div id="divAddProducts" style="margin-left:36%;" class="divSubMenu">
        @Html.ActionLink("Add Product", "AddProduct", "Product", null,new { @class= "MenuItem" })
    </div>

    <div id="divMyProfileItems" style="margin-left:83.9%%" class="divSubMenu">
        @Html.ActionLink("LogOut","Home","Home")

    </div>


    <div>
        @RenderBody()
    </div>
