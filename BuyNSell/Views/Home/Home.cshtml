            <label id="lblSuccess" style="font-weight:bold; font-size:20px"></label>
            <button id="btnSucessOk" type="button" class="SubmitButton" style="margin-left: 40%;margin-top: 30%;"> OK </button>
        </div>

        <div id="divViewProductDetails" style="display:none;position:fixed;padding:1% 1% 2% 1%;background-color:white;min-height:600px;min-width:650px;left:27%;top:15%;border-radius:35px;z-index:2;box-shadow:30px 20px 17px;">
