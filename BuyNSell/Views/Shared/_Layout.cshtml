        @Html.ActionLink("Mobiles", "Index", "Home",null, new { @class = "MenuItem" })
        @Html.ActionLink("Electronics", "Index", "Home",null, new { @class = "MenuItem" })
        @Html.ActionLink("Computers", "Index", "Home",null, new { @class = "MenuItem" })
    </div>

