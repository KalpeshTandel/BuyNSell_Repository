
<script type="text/javascript">
    function imgRate_Click(ProductId)
    {
        $("#divAddOrderBackground").show();
        $("#divAddRate").show();
        $.ajax({
            type: "Get",
            url: "../Rating/AddRate",
            datatype: "json",
            data: { ProductId: ProductId },
            success:function(result){
                $("#divAddRate").html(result);
            }

        });
    }

</script>


@if (ViewBag.Rate == 0)
{
    <img id="imgRate" src="~/Images/NoStar.jpg" style="width: 70%;" onclick="imgRate_Click(@ViewBag.ProductId)" />
}

else if(ViewBag.Rate == 1)
{
<img id="imgRate" src="~/Images/OneStar.jpg" style="width: 70%;" onclick="imgRate_Click(@ViewBag.ProductId)"  />
}
else if (ViewBag.Rate == 2)
{
    <img id="imgRate" src="~/Images/TwoStars.jpg" style="width: 70%;" onclick="imgRate_Click(@ViewBag.ProductId)"  />
}
else if (ViewBag.Rate == 3)
{
    <img id="imgRate" src="~/Images/ThreeStars.jpg" style="width: 70%;" onclick="imgRate_Click(@ViewBag.ProductId)"  />
}
else if (ViewBag.Rate == 4)
{
    <img id="imgRate" src="~/Images/FourStars.jpg" style="width: 70%;" onclick="imgRate_Click(@ViewBag.ProductId)"  />
}
else if (ViewBag.Rate == 5)
{
    <img id="imgRate" src="~/Images/FiveStars.jpg" style="width: 70%;" onclick="imgRate_Click(@ViewBag.ProductId)"  />
}
else
{
    <img id="imgRate" src="~/Images/NoStar.jpg" style="width: 70%;" onclick="imgRate_Click(@ViewBag.ProductId)"  />
}
